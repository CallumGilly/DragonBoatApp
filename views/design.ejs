<%- include('header') -%>
    <script>
        var boat = <%-JSON.stringify(boat)%>;
    </script>
    <!-- Bootstrap learned from https://www.w3schools.com/bootstrap5/bootstrap_forms.php -->
    <!-- Make boat and populate with data from sever -->
    <svg width="500" height="1000">
        <ellipse style="fill: rgb(255, 255, 255); stroke: #000000; fill-opacity: 0.9;" cx="220" cy="455" rx="100" ry="410"></ellipse>
        <line x1="220" y1="45" x2="220" y2="860" stroke-dasharray="10,10" style="stroke:rgb(141, 141, 141);stroke-width:1"></line>
        <!-- Assume the boat has 10 rows for simplicity -->
        <!-- Per Row -->
        <% for( let index = 0; index < boat.left.length; index++ ) { %>
            <text x="10" y=<%=200+(55*index)%> dominant-baseline="middle" text-anchor="middle" style="fill: rgb(141, 141, 141);"><%-boat.left[index].weight%></text>
            <rect x="30" y=<%=190+(55*index)%> height="20" width="80"  style="stroke: rgb(0, 0, 0); fill:rgb(255, 255, 255);" onClick="boxClicked('L',<%=index%>)"></rect>
            <text x="70" y=<%=200+(55*index)%> dominant-baseline="middle" text-anchor="middle" style="fill: rgb(0, 0, 0);" onClick="boxClicked('L',<%=index%>)"><%-boat.left[index].username%></text>
            <text x="220" y=<%=200+(55*index)%> dominant-baseline="middle" text-anchor="middle" style="fill:rgb(141, 141, 141);">-  Row <%-index+1%>  -</text>
            <rect x="325" y=<%=190+(55*index)%> height="20" width="80"  style="stroke: rgb(0, 0, 0); fill:rgb(255, 255, 255);" onClick="boxClicked('R',<%=index%>)"></rect>
            <text x="365" y=<%=200+(55*index)%> dominant-baseline="middle" text-anchor="middle" style="fill: rgb(0, 0, 0);" onClick="boxClicked('R',<%=index%>)"><%-boat.right[index].username%></text>
            <text x="425" y=<%=200+(55*index)%> dominant-baseline="middle" text-anchor="middle" style="fill: rgb(141, 141, 141);"><%-boat.right[index].weight%></text>
        <% } %>

        
    </svg>
    <script src="/public/designScripts.js"></script>
<%- include('footer') -%>